<h1><%= @product.name %></h1>
<dl>
  <dt>Valor do produto:</dt>
  <dd><%= number_to_currency @product.price,unit:'R$ ',separator:',',delimiter:'.' %></dd>
  <dt>Desconto:</dt>
  <dd><%= number_to_percentage @product.sale_discount, precision:1, significant: true, separator: ',', delimiter:'.' %></dd>
  <dt>Token: <%= @product.token %></dt>
</dl>
<%= link_to 'Voltar', [@company,:products] %>
<%= link_to 'Editar', [:edit,@company,@product] %>
<%= link_to 'Apagar', '#' %>